{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        {% for movie in movies %}
            <div class="row">
                <div class="col-sm">{{ movie.title }}</div>
                <div class="col-sm"><a href="/cinemas/{{ cinema.id }}/movies/{{ movie.id }}/movie_dates"> Pokaż dostępne terminy </a></div>
                <hr>
            </div>
        {% endfor %}
    </div>

{% endblock %}
