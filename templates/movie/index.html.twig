{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-sm-12" style="text-align: center">
                <h2>Dostępne fimy</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">Tytuł</div>
        </div>
        <hr>
        {% for movie in movies %}
            <div class="row">
                <div class="col-sm-3">{{ movie.title }}</div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3"><a href="/cinemas/{{ cinema.id }}/movies/{{ movie.id }}/movie_dates"> Pokaż dostępne terminy </a></div>
            </div>
            <br>
        {% endfor %}
    </div>

{% endblock %}
