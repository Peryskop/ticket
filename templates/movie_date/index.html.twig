{% extends 'base.html.twig' %}

{% block title %}Hello MovieDateController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        {% for date in dates %}
            <div class="row">
                <div class="col-sm">{{ date.date | date("D d/m/Y, G:i") }}, room: {{ date.room.roomNumber }}</div>
                <div class="col-sm"><a href="/ticket_purchase/{{ date.id }}">Kup bilet</a></div>
                <hr>
            </div>
        {% endfor %}
    </div>

{% endblock %}
